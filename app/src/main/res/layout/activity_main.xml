<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Display for the result -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="36sp"
        android:textColor="@android:color/white" />

    <!-- Calculator buttons in a GridLayout for simplicity -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/resultTextView"
        android:layout_marginTop="30dp"
        android:columnCount="4">

        <!-- Clear button -->
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#E91E63" />

        <!-- Parentheses buttons (for advanced use) -->
        <Button
            android:id="@+id/buttonOpenParenthesis"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="("
            android:textSize="24sp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonCloseParenthesis"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text=")"
            android:textSize="24sp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

        <!-- Number and operation buttons -->
        <!-- Row 1 -->
        <Button android:id="@+id/buttonDivide" android:layout_width="70dp" android:layout_height="wrap_content" android:text="/" android:textSize="24sp" android:backgroundTint="#FF5722" />
        <Button android:id="@+id/button7" android:layout_width="70dp" android:layout_height="wrap_content" android:text="7" android:textSize="24sp" android:backgroundTint="#03A9F4" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" />
        <Button android:id="@+id/button8" android:layout_width="70dp" android:layout_height="wrap_content" android:text="8" android:textSize="24sp" android:backgroundTint="#03A9F4" android:layout_marginRight="20dp"/>
        <Button android:id="@+id/button9" android:layout_width="70dp" android:layout_height="wrap_content" android:text="9" android:textSize="24sp" android:backgroundTint="#03A9F4" />

        <!-- Row 2 -->
        <Button android:id="@+id/buttonMultiply" android:layout_width="70dp" android:layout_height="wrap_content" android:text="*" android:textSize="24sp" android:backgroundTint="#FF5722" />
        <Button android:id="@+id/button4" android:layout_width="70dp" android:layout_height="wrap_content" android:text="4" android:textSize="24sp" android:backgroundTint="#03A9F4" android:layout_marginBottom="20dp"/>
        <Button android:id="@+id/button5" android:layout_width="70dp" android:layout_height="wrap_content" android:text="5" android:textSize="24sp" android:backgroundTint="#03A9F4" />
        <Button android:id="@+id/button6" android:layout_width="70dp" android:layout_height="wrap_content" android:text="6" android:textSize="24sp" android:backgroundTint="#03A9F4" />

        <!-- Row 3 -->
        <Button android:id="@+id/buttonAdd" android:layout_width="70dp" android:layout_height="wrap_content" android:text="+" android:textSize="24sp" android:backgroundTint="#FF5722" />
        <Button android:id="@+id/button1" android:layout_width="70dp" android:layout_height="wrap_content" android:text="1" android:textSize="24sp" android:backgroundTint="#03A9F4" android:layout_marginBottom="20dp"/>
        <Button android:id="@+id/button2" android:layout_width="70dp" android:layout_height="wrap_content" android:text="2" android:textSize="24sp" android:backgroundTint="#03A9F4" />
        <Button android:id="@+id/button3" android:layout_width="70dp" android:layout_height="wrap_content" android:text="3" android:textSize="24sp" android:backgroundTint="#03A9F4" />

        <!-- Row 4 -->
        <Button android:id="@+id/buttonSubtract" android:layout_width="70dp" android:layout_height="wrap_content" android:text="-" android:textSize="24sp" android:backgroundTint="#FF5722" />
        <Button android:id="@+id/buttonAC" android:layout_width="80dp" android:layout_height="wrap_content" android:text="AC" android:textSize="24sp" android:backgroundTint="#E91E63" />
        <Button android:id="@+id/button0" android:layout_width="70dp" android:layout_height="wrap_content" android:text="0" android:textSize="24sp" android:backgroundTint="#03A9F4" />
        <Button android:id="@+id/buttonDecimal" android:layout_width="70dp" android:layout_height="wrap_content" android:text="." android:textSize="24sp" android:backgroundTint="#03A9F4" />
        <!-- Equals button -->
        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:text="="
            android:textSize="24sp"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF" />


    </GridLayout>
</RelativeLayout>
